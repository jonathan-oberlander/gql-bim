type Author {
  firstName: String!
  id: ID!
  isPenName: Boolean!
  lastName: String!
}

type Book {
  genre: String!
  id: ID!
  isbn: String!
  name: String!
  read: Boolean!
}

scalar DateTime

type Mutation {
  markBookAsRead(id: ID!): Book!
}

type Query {
  author(id: ID!): Author
  book(id: ID!): Book
  user(id: ID!): User
}

type User {
  fullName: String!
  id: ID!
  isAdmin: Boolean!
}
